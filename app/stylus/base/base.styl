html
    box-sizing border-box
    font-size 62.5%
    height 100%

*, *:before, *:after
    box-sizing inherit

body
    height 100%
    min-width 320px
    font-family HeliosCond, arial, verdana, sans-serif
    background-color white
    font-weight 400
    font-style normal
    line-height normal
    color black
    display flex
    flex-direction column

    &.noflex
        display block

p
    &:not(:last-child)
        margin-bottom 7px

    &:last-child
        margin-bottom 0
