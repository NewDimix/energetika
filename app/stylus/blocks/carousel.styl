    .carousel-control
        width 10%
        span
            font-size 20px

    .carousel-indicators
        bottom 10px

        li
            margin-right 10px

        li.active
            margin-right 10px

    .item > video
        position absolute
        top 0
        left 0
        min-width 100%
        min-height 100%
        width auto
        height auto
        display none

        @media (min-width 768px)
            display block

    @media (min-aspect-ratio: 16/9)
        .item > video
            height 200%
            top -50%

    @media (max-aspect-ratio: 16/9)
        .item > video
            width 200%
            left -50%

    @supports (object-fit: cover)
        .item > video
            top 0
            left 0
            width 100%
            height 100%
            object-fit cover
