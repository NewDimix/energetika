.events
    text-align center
    font-size 20px
    background-image url(../img/events-bg.png)
    background-color white
    background-size 100%
    background-repeat no-repeat
    background-position center bottom
    padding-top 30px
    padding-bottom 80px

    @media (min-width 480px)
        padding-top 40px
        padding-bottom 110px

    @media (min-width 768px)
        padding-top 50px
        padding-bottom 200px

    @media (min-width 992px)
        padding-top 55px
        padding-bottom 270px

    @media (min-width 1400px)
        padding-top 65px
        padding-bottom 340px

    &__title
        margin-bottom 1.8em

    &__list
        list-style none
        text-align left
        hyphens()
        margin-bottom 3em

        li
            text-shadow -0   -1px 1px rgba( 255, 255, 255, 0.55 ), 0   -1px 1px rgba( 255, 255, 255, 0.55 ), -0    1px 1px rgba( 255, 255, 255, 0.55 ), 0    1px 1px rgba( 255, 255, 255, 0.55 ), -1px -0   1px rgba( 255, 255, 255, 0.55 ), 1px -0   1px rgba( 255, 255, 255, 0.55 ), -1px  0   1px rgba( 255, 255, 255, 0.55 ), 1px  0   1px rgba( 255, 255, 255, 0.55 ), -1px -1px 1px rgba( 255, 255, 255, 0.55 ), 1px -1px 1px rgba( 255, 255, 255, 0.55 ), -1px  1px 1px rgba( 255, 255, 255, 0.55 ), 1px  1px 1px rgba( 255, 255, 255, 0.55 ), -1px -1px 1px rgba( 255, 255, 255, 0.55 ), 1px -1px 1px rgba( 255, 255, 255, 0.55 ), -1px  1px 1px rgba( 255, 255, 255, 0.55 ), 1px  1px 1px rgba( 255, 255, 255, 0.55 )

    &__block-text
