.reviews-header
    background-image url(../img/reviews-header-bg.jpg)
    background-position center
    background-size cover
    padding-top 40px
    padding-bottom 230px

    @media (min-width 480px)
        padding-top 50px
        padding-bottom 300px

    @media (min-width 768px)
        padding-top 60px
        padding-bottom 420px

    @media (min-width 992px)
        padding-top 70px
        padding-bottom 530px

    @media (min-width 1400px)
        padding-bottom 630px

    &__title-wrap
        {ibt}
        position relative
        margin-top 0
        margin-bottom 0
        margin-left 10px
        border-top 1px solid $grey-medium-color
        border-left 1px solid $grey-medium-color
        padding-top 7.5px
        padding-left 12.5px
        text-align left

        @media (min-width 480px)
            margin-left 20px
            padding-top 8px
            padding-left 17.5px

        @media (min-width 992px)
            margin-left 0
            padding-top 8px
            padding-left 25px

        &:before
            content ''
            width 20px
            height 1px
            background-color $grey-medium-color
            position absolute
            top -1px
            right 100%

            @media (min-width 480px)
                width 25px

        &:after
            content ''
            width 1px
            height 15px
            background-color $grey-medium-color
            position absolute
            left -1px
            bottom 100%

            @media (min-width 480px)
                height 20px

        a
            display block
            color $grey-medium-color
            text-decoration none

            &:focus
                text-decoration none
                outline-color $grey-light-color

    &__title
        display block
        font-weight 400
        max-width 70vw
        color $grey-medium-color
        hyphens()
        font-family Calibri
        text-transform uppercase
        font-size-func(26)

        @media (min-width 480px)
            font-size-func(42)

        @media (min-width 768px)
            font-size-func(50)

        @media (min-width 992px)
            font-size-func(65)

        @media (min-width 1400px)
            font-size-func(88)

    &__subtitle
        font-size-func(24)
        font-weight 300
        text-transform lowercase
        color $grey-medium-color
        margin-left 25px

        @media (min-width 480px)
            font-size-func(34)
            margin-left 100px

        @media (min-width 768px)
            font-size-func(42)
            margin-left 100px

        @media (min-width 992px)
            font-size-func(48)
            margin-left 150px

        @media (min-width 1400px)
            font-size-func(54)
            margin-left 250px
