.news-page
    &__title
        h1
            font-size-func(20)

            @media (min-width 480px)
                font-size-func(25)

            @media (min-width 768px)
                font-size-func(30)

            @media (min-width 992px)
                font-size-func(35)

            @media (min-width 1400px)
                font-size-func(40)

    &__date
        font-size-func(14)
        text-align right
        margin-bottom 5px
        font-style italic

        @media (min-width 480px)
            font-size-func(16)

        @media (min-width 768px)
            font-size-func(17)

        @media (min-width 992px)
            font-size-func(18)

        @media (min-width 1400px)
            font-size-func(20)

    &__img
        margin-bottom 20px

        img
            max-width 100%
            max-height 600px

    &__text
        margin-bottom 30px

        @media (min-width 768px)
            margin-bottom 60px
