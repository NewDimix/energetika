.news-header
    background-image url(../img/news-header-bg.jpg)
    background-position center
    background-size cover
    padding-top 40px
    padding-bottom 120px
    text-align center

    @media (min-width 480px)
        padding-top 50px
        padding-bottom 180px

    @media (min-width 768px)
        padding-top 60px
        padding-bottom 250px

    @media (min-width 992px)
        text-align left
        padding-top 70px
        padding-bottom 350px

    @media (min-width 1400px)
        padding-bottom 430px

    &__title-wrap
        {ibt}
        position relative
        margin-top 0
        margin-bottom 30px
        border-top 1px solid white
        border-left 1px solid white
        padding-top 7.5px
        padding-left 12.5px
        text-align left

        @media (min-width 480px)
            padding-top 8px
            padding-left 17.5px

        @media (min-width 768px)
            margin-bottom 60px

        @media (min-width 992px)
            padding-top 8px
            padding-left 25px

        &:before
            content ''
            width 20px
            height 1px
            background-color white
            position absolute
            top -1px
            right 100%

            @media (min-width 480px)
                width 25px

        &:after
            content ''
            width 1px
            height 15px
            background-color white
            position absolute
            left -1px
            bottom 100%

            @media (min-width 480px)
                height 20px

        a
            display block
            color $grey-medium-color
            text-decoration none

            &:focus
                text-decoration none
                outline-color $grey-light-color

    &__title
        display block
        font-weight 400
        max-width 70vw
        color white
        hyphens()

        &_large
            font-family Calibri
            text-transform uppercase
            font-size-func(26)
            margin-bottom 10px

            @media (min-width 480px)
                font-size-func(42)

            @media (min-width 768px)
                font-size-func(50)

            @media (min-width 992px)
                font-size-func(65)

            @media (min-width 1400px)
                font-size-func(88)

        &_small
            font-family HeliosCond
            font-size-func(20)
            text-transform lowercase
            font-weight 300
            line-height 14.5px
            line-height 1.45rem

            @media (min-width 480px)
                font-size-func(42/1.63)
                line-height 18.5px
                line-height 1.85rem

            @media (min-width 768px)
                font-size-func(50/1.63)
                line-height 19.5px
                line-height 1.95rem

            @media (min-width 992px)
                font-size-func(65/1.63)
                line-height 27px
                line-height 2.7rem

            @media (min-width 1400px)
                font-size-func(88/1.63)
                line-height 36px
                line-height 3.6rem

    &__descr
        display block
        margin-left auto
        margin-right auto
        font-family HeliosCond
        color $grey-medium-color
        padding (14/19)em (14/20)em
        font-size-func(14)
        line-height 1.3
        background-color rgba(255, 255, 255, 0.8)
        text-align left
        hyphens()

        @media (min-width 468px)
            max-width 430px

        @media (min-width 768px)
            font-size-func(16)
            max-width 500px

        @media (min-width 992px)
            font-size-func(18)
            max-width 500px
            margin-left 0
            margin-right 0

        @media (min-width 1400px)
            font-size-func(25)
            max-width 660px

        &:hover
            text-decoration none
            color $grey-medium-color

        &:focus
            text-decoration none
            outline-color $grey-light-color

        h2
            margin-top 0
            margin-bottom 10px
            text-transform uppercase
            font-size-func(18)

            @media (min-width 768px)
                font-size-func(20)

            @media (min-width 992px)
                font-size-func(24)

            @media (min-width 1400px)
                font-size-func(34)
