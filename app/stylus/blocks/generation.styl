.generation
    background-image url(../img/generation-bg.jpg)
    background-position center
    background-size cover
    padding-top 30px
    padding-bottom 80px
    text-align center

    @media (min-width 480px)
        padding-top 35px
        padding-bottom 150px

    @media (min-width 768px)
        padding-top 40px
        padding-bottom 250px

    @media (min-width 992px)
        padding-top 45px
        padding-bottom 350px

    @media (min-width 1400px)
        padding-top 55px
        padding-bottom 450px

    &__title
        color white
        font-weight 300
        max-width 1000px
        margin-left auto
        margin-right auto
        text-align center
        text-transform uppercase
        margin-top 0
        margin-bottom .6em
        font-size-func(30)
        hyphens()

        @media (min-width 768px)
            font-size-func(45)

        @media (min-width 992px)
            font-size-func(60)

        @media (min-width 1400px)
            font-size-func(75)

    &__text
        width 90%
        padding 1em
        margin-bottom 3em

        hr
            width 41%
            border-width 3px
            margin-top 1em
            margin-bottom 1em
