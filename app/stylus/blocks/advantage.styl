.advantage
    text-align center
    padding-top 30px
    padding-bottom 40px
    color $grey-medium-color
    background-image url(../img/advantage-bg.jpg)
    background-position center
    background-size cover

    @media (min-width 480px)
        padding-top 35px

    @media (min-width 768px)
        padding-top 40px
        padding-bottom 45px

    @media (min-width 992px)
        padding-top 45px
        padding-bottom 65px

    @media (min-width 1400px)
        padding-top 50px
        padding-bottom 80px

    &__title
        text-align center
        text-transform uppercase
        font-family Calibri
        font-weight 700
        font-size-func(27)
        margin-bottom .5em

        @media (min-width 480px)
            font-size-func(35)

        @media (min-width 768px)
            font-size-func(40)

        @media (min-width 992px)
            font-size-func(45)

        @media (min-width 1400px)
            font-size-func(54)

    &__subtitle
        {ibt}
        text-transform none
        font-size-func(27/1.35)
        font-weight 300
        padding .3em .55em
        margin-bottom 1.375em

        @media (min-width 480px)
            font-size-func(35/1.35)

        @media (min-width 768px)
            font-size-func(40/1.35)

        @media (min-width 992px)
            font-size-func(45/1.35)

        @media (min-width 1400px)
            font-size-func(40)

    &__columns
        text-transform uppercase
        font-size 20px
        margin-bottom 45px

        hr
            width 60%
            border 3px solid #7e8183

        p
            position relative
            font-size-func(30/1.5)
            padding-left 10%
            padding-right 10%

            @media (min-width 992px)
                font-size-func(35/1.5)

            @media (min-width 1400px)
                font-size-func(36)

        .row
            position relative
            font-size 0
            padding-top 20px
            padding-bottom 20px

            &:not(:last-child)
                &:after
                    content ''
                    position absolute
                    bottom 0
                    width 70%
                    left 15%
                    height 5px
                    transform translateY(50%)
                    background-color $grey-light-color


                @media (min-width 992px)
                    &:after, &:before
                        content ''
                        position absolute
                        bottom 0
                        width 30%
                        height 5px
                        transform translateY(50%)
                        background-color $grey-light-color

                    &:after
                        left 10%

                    &:before
                        right 10%

        .col-md-6
            @media (min-width 992px)
                {ibm}
                width 49%
                float none

            &:first-child
                p
                    &:after
                        content ''
                        position relative
                        display block
                        margin-top 10px
                        margin-bottom 10px
                        width 30px
                        height 30px
                        left 50%
                        transform rotate(90deg) translateY(50%)
                        background-image inline('arrow.png')
                        background-position center
                        background-size cover
                        background-repeat no-repeat

                        @media (min-width 992px)
                            position absolute
                            top 50%
                            transform translate(100%, -83%)
                            left inherit
                            right 0

                        @media (min-width 1400px)
                            width 40px
                            height 40px
                            transform translate(88%, -75%)

    &__column-title
        position relative
        font-size-func(30)
        text-transform uppercase

        @media (min-width 768px)
            font-size-func(35)

        @media (min-width 992px)
            font-size-func(35)

        @media (min-width 1400px)
            font-size-func(54)
