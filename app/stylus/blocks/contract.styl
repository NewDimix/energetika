.contract
    background-image url(../img/contract-bg.jpg)
    background-size cover
    background-position center bottom
    font-size 20px
    font-weight 300
    padding-top 30px
    padding-bottom 70px

    @media (min-width 768px)
        padding-top 40px
        padding-bottom 90px

    @media (min-width 992px)
        padding-top 50px
        padding-bottom 120px

    @media (min-width 1400px)
        padding-top 60px
        padding-bottom 180px

    &__title
        margin-bottom 2.9em

    &__list
        margin-bottom 2.9em

        @media (min-width 480px)
            max-width 400px
            margin-left auto
            margin-right auto

        @media (min-width 992px)
            max-width none
            margin-left 0
            margin-right 0

    &__block-text
        {ibt}
        width 90%
        max-width 830px
        margin-bottom 1.3em
