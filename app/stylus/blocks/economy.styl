.economy
    text-align center
    font-size 20px
    background-image url(../img/economy-bg.jpg)
    background-size cover
    background-position center bottom
    padding-top 20px
    padding-bottom 30px

    @media (min-width 480px)
        padding-top 30px
        padding-bottom 40px

    @media (min-width 768px)
        padding-top 40px
        padding-bottom 60px

    @media (min-width 992px)
        padding-top 50px
        padding-bottom 80px

    @media (min-width 1400px)
        padding-top 60px
        padding-bottom 100px

    &__title
        color white
        margin-bottom 1.8em

    &__list
        color white
        margin-bottom 2.4em
        text-align left
        hyphens()

    &__block-text
        width 90%
        font-size-func(14)
        padding 1.72em 1.875em
        margin-bottom 1.3em
